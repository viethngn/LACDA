class LACDA_Duration_Analysis(people_fullvid, people_total, avg_duration, total_duration):
	#analyze data by duration of the post

	def ratio_people(people_fullvid, people_total):
		return people_fullvid/people_total
		#return ratio of number of people watching till the end over the total number of people watching
		#how many people watch the video till the end?

	def average_duration(avg_duration):
		return avg_duration
		#return the average duration that people watch the video
		#where the audience most likely stop watching

	def ratio_duration(avg_duration, total_duration):
		return avg_duration/total_duration
		#return the ratio of average watching duration over video's duration
		#see if the video is too long for audience
